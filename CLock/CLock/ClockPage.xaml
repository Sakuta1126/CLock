<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLock.ClockPage">
    <ContentPage.Content>
        <Grid BackgroundColor="Black">
                <Label Text="What time is it?" TextColor="White" VerticalOptions="Start" HorizontalOptions="Center" FontSize="30" Margin="0,20,0,0"></Label>
            <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center" >
                <Label x:Name="Timesub" HorizontalOptions="Center" TextColor="White" FontSize="40" Text="09:00:00" FontAttributes="Bold"></Label>
                <Label x:Name="Datasub" HorizontalOptions="Center" TextColor="White" FontSize="20" Text="07 March 2024" ></Label>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>